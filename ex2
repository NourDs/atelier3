class triangle :
     public 
     shape{
    public :
    double base ;
    double largeur,hauteur;
    public :
        triangle (double x, double y ,double z){
        largeur =x;
        hauteur=y;
        base=z;
       }
    double area(){
        return (base*hauteur)/2;
    }
};
class rectangle :
public 
shape{
